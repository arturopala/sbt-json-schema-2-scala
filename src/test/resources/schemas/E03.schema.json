{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "MTDfB - Agents - Subscribe to Agent Services",
  "type": "object",
  "properties": {
    "safeId": {
      "description": "SAFE reference identifier",
      "type": "string",
      "pattern": "^[A-Za-z0-9 \\-,.&'\\/]{1,15}$"
    },
    "agencyName": {
      "description": "Name of Agency",
      "type": "string",
      "pattern": "^[A-Za-z0-9 \\-,.&'\\/]{1,40}$"
    },
    "agencyAddress": {
      "description": "Container element for Agency Address-specific fields",
      "oneOf": [
        {
          "$ref": "#/definitions/ukAddress"
        },
        {
          "$ref": "#/definitions/foreignAddress"
        }
      ]
    },
    "telephoneNumber": {
      "description": "Telephone Number",
      "type": "string",
      "pattern": "^[0-9-+()#x ]{1,24}$"
    },
    "agencyEmail": {
      "description": "Contact Email Address",
      "type": "string",
      "format": "email",
      "minLength": 1,
      "maxLength": 132
    }
  },
  "required": [
    "agencyName",
    "agencyAddress"
  ],
  "additionalProperties": false,
  "definitions": {
    "ukAddress": {
      "type": "object",
      "properties": {
        "addressLine1": {
          "type": "string",
          "description": "Address line 1",
          "pattern": "^[A-Za-z0-9 \\-,.&'\\/]{1,35}$"
        },
        "addressLine2": {
          "type": "string",
          "description": "Address line 2",
          "pattern": "^[A-Za-z0-9 \\-,.&'\\/]{1,35}$"
        },
        "addressLine3": {
          "type": "string",
          "description": "Address line 3",
          "pattern": "^[A-Za-z0-9 \\-,.&'\\/]{1,35}$"
        },
        "addressLine4": {
          "type": "string",
          "description": "Address line 4",
          "pattern": "^[A-Za-z0-9 \\-,.&'\\/]{1,35}$"
        },
        "postalCode": {
          "type": "string",
          "description": "Business Postal Code",
          "pattern": "^[A-Z]{1,2}[0-9][0-9A-Z]?\\s?[0-9][A-Z]{2}$|BFPO\\s?[0-9]{1,5}$"
        },
        "countryCode": {
          "type": "string",
          "description": "2-digit ISO code for the country",
          "enum": [
            "GB"
          ]
        }
      },
      "required": [
        "addressLine1",
        "postalCode",
        "countryCode"
      ],
      "additionalProperties": false
    },
    "foreignAddress": {
      "type": "object",
      "properties": {
        "addressLine1": {
          "type": "string",
          "description": "Address line 1",
          "pattern": "^[A-Za-z0-9 \\-,.&'\\/]{1,35}$"
        },
        "addressLine2": {
          "type": "string",
          "description": "Address line 2",
          "pattern": "^[A-Za-z0-9 \\-,.&'\\/]{1,35}$"
        },
        "addressLine3": {
          "type": "string",
          "description": "Address line 3",
          "pattern": "^[A-Za-z0-9 \\-,.&'\\/]{1,35}$"
        },
        "addressLine4": {
          "type": "string",
          "description": "Address line 4",
          "pattern": "^[A-Za-z0-9 \\-,.&'\\/]{1,35}$"
        },
        "postalCode": {
          "type": "string",
          "description": "Business Postal Code",
          "pattern": "^[A-Za-z0-9 \\-,.&'\\/]{1,10}$"
        },
        "countryCode": {
          "description": "2-digit ISO code for the country",
          "$ref": "#/definitions/countryCode"
        }
      },
      "required": [
        "addressLine1",
